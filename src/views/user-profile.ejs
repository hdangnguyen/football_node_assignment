<!DOCTYPE html>
<html lang="en">
    <%- include('header'); %>
<body>
    <%- include('navigator'); %>
    <div class="h-full bg-gray-200 p-8">
        <div class="bg-white rounded-lg shadow-xl pb-8">
               
            <div class="w-full h-[250px]">
                <img src="https://vojislavd.com/ta-template-demo/assets/img/profile-background.jpg" class="w-full h-full rounded-tl-lg rounded-tr-lg">
            </div>
            <div class="flex flex-col items-center -mt-20">
                <!-- if image not empty, show image otherwise show default image -->
                <% if(user.image == "") { %>
                    <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" class="w-40 h-40 border-4 object-cover	 border-white rounded-full">
                <% } else { %>
                <img src="<%= user.image %>" class="w-40 h-40 border-4 object-cover	 border-white rounded-full">
                <% } %>
                <div class="flex items-center space-x-2 mt-2">
                    <p class="text-2xl"><%= user.name %></p>
                    
                </div>
                <p class="text-gray-700"><%= user.username %></p>
                <% if(user.isAdmin == false) { %>
                <p class="text-sm text-gray-500">User</p>
                <% } else { %>
                <p class="text-sm text-gray-500">Admin</p>
                <% } %>
            </div>
            <div class="flex-1 flex flex-col items-center lg:items-end justify-end px-8 mt-2">
                <div class="flex items-center space-x-4 mt-2">
                    <%- include('edit-user-profile'); %>
                    <% if (locals.user.isAdmin) { %> <!-- if user is logged in -->
                <a href="/user/admin/userManagement"
                    class="flex items-center justify-center px-3 py-2 space-x-2 text-sm tracking-wide text-white capitalize transition-colors duration-200 transform bg-blue-500 rounded-md dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:bg-blue-700 hover:bg-blue-600 focus:outline-none focus:bg-blue-500 focus:ring focus:ring-blue-300 focus:ring-opacity-50">
                    <i class="fa-solid fa-list"></i>
                    <span>User management</span>
                </a>
                <% } %>
                </div>
            </div>
        </div>

        <div class="my-4 flex flex-col 2xl:flex-row space-y-4 2xl:space-y-0 justify-center">
            <div class="w-full flex flex-col 2xl:w-1/3">
                <div class="flex-1 bg-white rounded-lg shadow-xl p-8">
                    <h4 class="text-xl text-gray-900 font-bold">Personal Info</h4>
                    <ul class="mt-2 text-gray-700">
                        <li class="flex border-y py-2">
                            <span class="font-bold w-24">Name:</span>
                            <span class="text-gray-700">
                                <%= user.name %>
                            </span>
                        </li>
                        <li class="flex border-b py-2">
                            <span class="font-bold w-24">Email:</span>
                            <% if(user.email == "") { %>
                                <span class="text-gray-400">Not set</span>
                            <% } else { %>
                            <span class="text-gray-700"><%= user.email %></span>
                            <% } %>
                        </li>
                        <li class="flex border-b py-2">
                            <span class="font-bold w-24">YOB:</span>
                            <% if(user.YOB == 0) { %>
                                <span class="text-gray-400">Not set</span>
                            <% } else { %>
                            <span class="text-gray-700"><%= user.YOB %></span>
                            <% } %>
                        </li>
                        
                        
                    </ul>
                </div>
            </div>
           
        </div>
    </div>
</body>
</html>